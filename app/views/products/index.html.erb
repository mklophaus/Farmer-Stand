
<p id="notice"><%= notice %></p>

<h1>Shopping Cart</h1>
<% @shopping_cart.each do |product| %>
      <tr>
        <td><%= Product.find(product).name %>
        </td>
      </tr>


    <% end %>





<h1>Products</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category %></td>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.formatted_price %></td>
        <td><%= product.taste_description %></td>

        <%- if params["action"] == "new" || current_user.type == "Purchaser" %>

          <td><%= link_to 'Add to Cart', shopping_cart_path(:product_id => product.id), data: {confirm: 'Add to order?'}, method: "post" %></td>

        <% elsif params["action"] != "new" && current_user.type == "Farmer" %>

          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>


    <% end %>
  </tbody>


</table>

<style>

body{
  text-align: center;
}

table {
  border: solid black;
  margin: 0 auto;
  border-radius: 20px;
}
</style>

<br>


<%= link_to '<button type="button">Add More</button>'.html_safe, new_user_product_path(current_user) %>
<%= link_to '<button type="button">Home</button>'.html_safe, user_path(current_user) %>

