
<h1>Your Cart</h1>
<div class ="orders">
  <% if cart.length == 0 %>
    <h2>You don't have any orders yet!</h2>
  <% else %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Category</th>
          <th>Name</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% cart_products.each do |product| %>
          <tr>
            <td><%= product.category %></td>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.formatted_price %></td>
            <td><%= product.taste_description %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to '<button class="ordershome" type="button">Home</button>'.html_safe, user_path(current_user) %>
  <%= link_to '<button class="ordershome" type="button">Back to Products</button>'.html_safe, products_path %>
</div>

<style>
  body{
    text-align: center;
  }

  table {
    margin: 0 auto;
  }
</style>
