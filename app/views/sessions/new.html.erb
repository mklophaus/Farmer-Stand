
<body>

<h1>Login</h1>

<%-#Gives alert... -%>
<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>:
    <%= text_field_tag :email, params[:email] %>
  </div>
  <p>
  <div class="field">
    <%= label_tag :password %>:
    <%= password_field_tag :password %>
  </div>
  <p>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>

</body>

<style>

  body {
   text-align: center;
 }

</style>




