<!DOCTYPE html>
<html>
<head>
  <title>FarmerStand</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p>
  <% if current_user %>
    <% #Says welcome...user %>
    Welcome, <%= current_user.name %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Logout', session_path('dontmatter'), method: :delete %>
  <% elsif current_farmer %>
    <% #Says welcome...user %>
    Welcome Farmer <%= current_farmer.name %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <%= link_to 'Logout', session_path('dontmatter'), method: :delete %>
  <% else %>
    <% #directs to /login %>
    <%= link_to 'Login', login_path %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <% #directs back /user/new %>
    <%= link_to 'Sign Up', pick_path %>
  <% end %>

</p>




<%= yield %>

</body>
</html>
