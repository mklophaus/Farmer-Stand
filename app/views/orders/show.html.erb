
<h1>Your Orders</h1>
<div class ="orders">
<% if @shopping_cart == nil %>
  <h2>You don't have any orders yet!</h2>

<% else %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <% @shopping_cart.each do |product| %>
      <tr>
        <td><%= Product.find(product).category %></td>
        <td><%= Product.find(product).name %></td>
        <td><%= Product.find(product).quantity %></td>
        <td><%= Product.find(product).formatted_price %></td>
        <td><%= Product.find(product).taste_description %></td>
        </tr>
    <% end %>
  </tbody>

  <% end %>

</div>

  <style>

body{
  text-align: center;
}

table {
  margin: 0 auto;
}
</style>


  <br>

  <%= link_to '<button clas ="ordershome" type="button">Home</button>'.html_safe, user_path(current_user) %>





