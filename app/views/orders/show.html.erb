
<h1>Your Orders</h1>


<% if @shopping_cart == nil %>
  <h2>You don't have any orders yet!</h2>

<% else %>
<table class="striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <% @shopping_cart.each do |product| %>
      <tr>
        <td><%= Product.find(product).category %></td>
        <td><%= Product.find(product).name %></td>
        <td><%= Product.find(product).quantity %></td>
        <td><%= Product.find(product).formatted_price %></td>
        <td><%= Product.find(product).taste_description %></td>

    <% end %>
  </tbody>

  <% end %>




