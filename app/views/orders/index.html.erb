<p id="notice"><%= notice %></p>

<h1>The Orders...</h1>
<table>
  <thead>
    <tr>
      <th>Order Num</th>
      <th>Delivery Location</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= order.delivery_location %></td>
        <td><%= link_to 'Show', order %></td>

    <% end %>
  </tbody>
</table>

<style>

body{
  text-align: center;
}

table {
  border: solid black;
  margin: 0 auto;
  border-radius: 20px;
}
</style>

