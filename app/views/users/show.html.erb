    <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Check Your Inventory</button>'.html_safe, user_products_path(current_user) %>
    <br>
    <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Update Account</button>'.html_safe, edit_user_path(@user)%>
  <% end %>


