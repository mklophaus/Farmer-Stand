<title>Da Farmer Stand</title>
<h1>Da Farmer Stand</h1>
<p id="notice"><%= notice %></p>

<h2>To buy or sell goods sign up and become a member!</h2>

<br>
  <% if @user.type == "Purchaser" %>

      <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Update Your Account</button>'.html_safe, edit_user_path(@user) %>
      <br>

    <%= link_to '<button class="btn btn-default btn-lg btn-block" type="button">Check your Order</button>'.html_safe, order_path(current_user) %>

<br>

      <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Make an Order</button>'.html_safe, products_path %>


  <% elsif @user.type == "Farmer" %>

<br>
    <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Add Your Products</button>'.html_safe, new_user_product_path(current_user) %>
<br>
    <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Check Your Inventory</button>'.html_safe, user_products_path(current_user) %>
<br>
    <%= link_to '<button class="btn btn-primary btn-lg btn-block" type="button">Update Account</button>'.html_safe, edit_user_path(@user)%>


    <% end %>




